{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./lib",
    "outDir": "lib",
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "paths": {
      "~~": ["./lib"],
      "~~/*": ["./lib/*"]
    }
  },
  "files": [],
  "include": ["./lib"],

  "exclude": [
    "src/**/*",
    "docs/**/*",
    "**/typedoc/**",
    "test/**/*",
    "node_modules",
    "**/node_modules",
    "**/node_modules/**",
    "../../node_modules/**/*",
    "./.yalc/**/*"
  ]
}
